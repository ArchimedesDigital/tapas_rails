- if current_user && current_user.admin?
  = link_to "Edit", edit_page_path(@page), class:['btn', 'btn-info', 'btn-large']
%h2.page-header
  = @page.title

-if @page.submenu
  %div.row
    %div.col-sm-9
      = raw @page.content
    %div.col-sm-3
      = render partial: "submenu", locals: {submenu: @page.submenu}
- else
  = raw @page.content
