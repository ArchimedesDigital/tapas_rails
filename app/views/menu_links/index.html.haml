%h2.page_title
  = "Menu Items"

%hr

%h3
  = "Main Menu"
  - if current_user.admin?
    %small
      %a{href:new_menu_link_path(:menu_name => "main_menu")}
        %i.fa.fa-plus
        = "Add New"
%div.dd#main_menu_links
  %ol.dd-list
    - @main_menu_links.each do |l|
      %li.dd-item{"data-id"=>l.id}
        %div.dd-handle
          = "#{l.link_text} (#{l.link_href})"
        = link_to("Edit", edit_menu_link_path(l), "class"=>"inline-block")

